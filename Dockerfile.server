# Backend Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy server source
COPY server/ ./server/
COPY shared/ ./shared/
COPY tsconfig.json ./

# Install tsx for running TypeScript
RUN npm install -g tsx

EXPOSE 5000

ENV NODE_ENV=production

CMD ["tsx", "server/production.ts"]